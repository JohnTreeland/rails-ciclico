  <div class="ciclico-gradient-show d-flex flex-column justify-content-between">
  <%= render 'shared/navbar' %>
  <div class="container text-secondary bg-primary rounded-5 px-5 flex-grow-1">
    <div class="tabs my-5">
      <div class="tab">
        <input type="radio" name="css-tabs" id="tab-1" checked class="tab-switch">
        <label for="tab-1" class="tab-label rounded-pill me-2 fs-5">Mi Perfil</label>
        <div class="tab-content mt-4 rounded-5 row" id="profile-scroll">
          <div class="col-3">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, style: "width:100%; height:auto", class: "rounded-5" %>
            <% else %>
              <%= image_tag "data:image/png;base64,", style: "width:100%; height:auto", class: "rounded-5" %>
            <% end %>
          </div>
          <div class="col-9">
            <div class="name d-flex">
              <h3> <%=current_user.first_name %></h3>
              <h3 class="text-warning ms-3"><%=current_user.last_name %></h3>
            </div>
            <h5>Ayudando al planeta desde <%= current_user.created_at %></h5>
            <% if current_user.collector %>
              <h5>Tu perfil es de Recolector</h5>
              <h5>Haz realizado <%= Petition.where(collector: current_user).size %> recolecciones</h5>
              <!--h5>Haz realizado <%#= RecyclingSite.where(collector: current_user).petitions.size %> recolecciones</h5-->
            <% end %>
            <h5>Haz pedido <%= Petition.where(user: current_user).size%> recolecciones</h5>
            <h5>Haz visitado un Sitio de Reciclaje <%= Petition.where(user: current_user).size%> veces <%=  %></h5>
            <h5>Email: <%= current_user.email %></h5>
            <h5></h5>
            <%= link_to "Editar perfil", edit_user_registration_path, class: "btn btn-success rounded-pill mt-3" %>
          </div>
        </div>
      </div>
      <div class="tab">
        <input type="radio" name="css-tabs" id="tab-2" class="tab-switch">
        <label for="tab-2" class="tab-label rounded-pill me-2 fs-5">Recolecciones programadas</label>
        <div class="tab-content mt-4 rounded-5">
          <div class="mt-3 row">
            <% if Petition.where(user: current_user).empty? %>
              <h3 class="text-info text-center">No has realizado ninguna petición de recolección todavía, ¿qué esperas para reciclar?</h3>
            <% end %>
            <% Petition.where(user: current_user).each do |petition| %>
              <% if petition.collector %>
                <div class="col-4">
                  <div class="card bg-transparent border-info ms-3 mb-3 rounded-5" style="max-width: 18rem;">
                    <div class="card-header rounded-top bg-transparent">
                      <h4 class="text-success mt-2 text-center"> <b><%= petition.collector.first_name %></b></h4>
                    </div>
                    <div class="card-body">
                      <p class="card-text">
                        Recolectará <i><%= petition.material.category %></i> el <%= petition.date %></p>
                        <div class="d-flex">
                          <% if petition.pendiente? %>
                            <p><%= petition.collector.first_name %> todavía no ha aceptado tu petición de recolección</p>
                          <% elsif petition.aceptado? %>
                            <p><%= petition.collector.first_name %> ha aceptado tu recolección. Esperalo(a) el día y la hora programada</p>
                          <% elsif petition.rechazado?  %>
                            <p><%= petition.collector.first_name %> ha rechazado tu recolección. Por favor revisa si el material que ibas a reciclar si era adecuado para el recolector. <br> Inténtalo de nuevo</p>
                          <% end %>
                        </div>
                        <%= link_to "Ver recolectores", collectors_path, class: "btn-info-ciclico mt-3 rounded-pill text-secondary" if petition.rechazado?%>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="tab">
        <input type="radio" name="css-tabs" id="tab-3" class="tab-switch">
        <label for="tab-3" class="tab-label rounded-pill me-2 fs-5">Visitas programadas</label>
        <div class="tab-content mt-4 rounded-5">
          <div class="mt-3 row">
            <% if Petition.where(user: current_user).empty? %>
              <h3 class="text-info text-center">No has realizado ninguna visita todavía, ¿qué esperas para reciclar?</h3>
            <% end %>
            <% Petition.where(user: current_user).each do |petition| %>
              <% if petition.recycling_site %>
                <div class="col-4">
                  <div class="card bg-transparent border-info ms-3 mb-3 rounded-5" style="max-width: 18rem;">
                    <div class="card-header rounded-top bg-transparent">
                      <h4 class="text-success mt-2 text-center"> <b><%= petition.recycling_site.name %></b></h4>
                    </div>
                    <div class="card-body">
                      <p class="card-text">
                        Llevarás <i><%= petition.recycling_site.material.category %></i> el <%= petition.date %></p>
                        <div class="d-flex">
                          <% if petition.pendiente? %>
                            <p><%= petition.recycling_site.name %> todavía no ha aceptado tu petición de entrega de reciclaje</p>
                          <% elsif petition.aceptado? %>
                            <p><%= petition.recycling_site.name %> ha aceptado tu entrega. Ve al Sitio de Reciclaje el día y la hora programada</p>
                          <% elsif petition.rechazado?  %>
                            <p><%= petition.recycling_site.name %> ha rechazado tu entrega. Por favor revisa si el material que ibas a reciclar si era adecuado para el sitio de reciclaje. <br> Inténtalo de nuevo</p>
                          <% end %>
                        </div>
                        <%= link_to "Ver sitios de reciclaje", recycling_sites_path, class: "btn-info-ciclico m-3 rounded-pill text-secondary px-4" if petition.rechazado?%>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
