<div class="ciclico-gradient-show d-flex flex-column justify-content-between">
  <%= render 'shared/navbar' %>
<div class="container text-secondary bg-primary rounded-5 p-5">
    <h1>Mis puntos de reciclajes</h1>
    <div class="row">
      <% @recycling_sites.each do |site| %>
        <div class="col-6">
           <%= link_to recycling_site_path(site) do %>
            <div class="card my-2">
                  <div class="card-body">

                    <h2><%= site.name.capitalize %></h2>
                  </div>
            </div>
          <% end %>
        </div>
      <% end %>

        <%# <div class="col-4">

        </div> %>
      <div class="col-6">
        <h3>Peticiones activas</h3>
        <hr>
        <div class="mt-3">
          <% Petition.where(user: current_user).each do |petition| %>
            <p>Solicitante: <%= petition.user.first_name %></p>
            <p>Fecha: <%= petition.date %></p>
            <p>Material: <%= petition.material.category %></p>
            <div class="d-flex">
              <p class="me-2">Estado: </p>
              <% if petition.pendiente? %>
                <p>Pendiente </p>
              <% elsif petition.aceptado? %>
                <p>Aceptado</p>
              <% elsif petition.rechazado?  %>
                <p> Rechazado </p>
              <% end %>
            </div>
            <hr>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
