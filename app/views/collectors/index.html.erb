<div class="ciclico-gradient d-flex flex-column justify-content-between">
  <%= render 'shared/navbar' %>
  <div class="container mt-3">
    <h1 class="text-secondary text-center">Estos recicladores trabajan cerca a tí</h1>
    <%= form_with url: collectors_path, method: :get, class: "d-flex" do %>
      <%= select_tag :city,
        options_for_select([["Ciudad"], ["Medellín"], ["Envigado"], ["Itagüí"]]),
        class: "form-control",
        placeholder: "Looking your City"
      %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    <div class="row">
      <% @collectors.each do |collector| %>
        <div class="col-4">
          <%= link_to collector_path(collector) do %>
            <div class="card my-2">
                  <img src="https://www.wiego.org/sites/default/files/Hewlett_Bogota_FullRelease_050_1.jpg" class="card-img-top">
                  <div class="card-body">
                   <p>Contacta a </p>
                    <h2><%= collector.first_name %></h2>
                    <h2><%= collector.city %></h2>
                  </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
