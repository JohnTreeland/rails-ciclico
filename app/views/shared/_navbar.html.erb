<div class="navbar navbar-expand-sm navbar-lewagon text-white">
  <div class="container-fluid">
    <div class="d-flex">
      <%= link_to "/", class: "navbar-brand ms-5" do %>
        <i class="fa-solid fa-circle-notch text-warning fs-1"></i>
      <% end %>
      <div>
       <h1 class="text-secondary">Cíclico</h1>
      </div>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
        <li>
          <% if current_user.collector? %>
            <%= link_to "Agendas", "/daily", class: "nav-link" %>
          <% end %>
        </li>
          <li class="nav-item active me-2">
            <%= link_to "Mi Perfil", "/profile", class: "nav-link" %>
          </li>
          <li class="nav-item me-2">
            <%= link_to "Chat", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown me-5">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end dropdown-ciclico" aria-labelledby="navbarDropdown">
              <% if current_user.collector %>
                <%= link_to "Administrar Sitios de Reciclaje", "#", class: "dropdown-item text-info" %>
                <%= link_to "Ver Peticiones", "#", class: "dropdown-item text-info" %>
              <% end %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item text-info" %>
            </div>
          </li>

        <% else %>
          <li class="nav-item">
            <%#= link_to "Login", new_user_session_path, class: "nav-link btn btn-success rounded-pill text-secondary px-4 me-5" %>
            <%= link_to "Iniciar Sesión", new_user_session_path, class: "nav-link px-4 me-5" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
