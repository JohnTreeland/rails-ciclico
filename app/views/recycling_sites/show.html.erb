<div class="ciclico-gradient-show d-flex flex-column justify-content-between">
  <%= render 'shared/navbar' %>
  <div class="container bg-primary rounded-5 p-5 my-3 text-secondary">
    <div class="row">
      <div class="col-8">
        <h1 class="text-secondary">En <%= @recycling_site.name %> sitio podr치s reciclar: </h1>
        <h1 class="text-warning"><%= @recycling_site.material.category %></h1>
          <% if @recycling_site.photo.attached? %>
            <%= cl_image_tag @recycling_site.photo.key, class: "text-center mb-3", style: "height: 300px; width: 500px" %>
          <% else %>
            <%= image_tag "https://www.wiego.org/sites/default/files/Hewlett_Bogota_FullRelease_050_1.jpg", class: "text-center mb-3", style: "height: 300px; width: 500px" %>
          <% end %>
        <p>M치s informaci칩n sobre el lugar</p>
        <%= link_to "Regresar", recycling_sites_path, class:"btn btn-success rounded-pill text-secondary" %>
        <%= link_to "Hablar con el recolector", "#", class:"btn btn-success rounded-pill text-secondary" %>
      </div>
      <div class="col-4">
        <h3>Ubicaci칩n:</h3>
        <h4><%#= @recycling_site.material.address %></h4>
        <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
        <div class="mt-3">
          <%= simple_form_for @petition do |f|%>
            <%= f.input :status, as: :hidden, value: 0  %>
            <%= f.datetime_select :date %>
            <%= f.association :material, collection: Material.all, label_method: :category %>
            <%= hidden_field_tag 'recycling_site_id', @recycling_site.id %>
            <%= f.submit "Agendar visita", class:"btn btn-success rounded-pill text-secondary mt-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/footer' %>
</div>
