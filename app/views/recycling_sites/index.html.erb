      <%= select_tag :material,
        options_for_select([["Material a reciclar"], ["Aceite"], ["Baterías"], ["Electrónicos"], ["Papel/Carton"], ["Ropa"], ["Plástico"], ["Vidrio"],]),
        class: "form-control",
        placeholder: "Looking your City"
      %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
