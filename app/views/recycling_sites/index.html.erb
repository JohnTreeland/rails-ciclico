    </div>
    <div class="row">
      <% @recycling_sites.each do |site| %>
        <div class="col-4">
           <%= link_to recycling_site_path(site) do %>
            <div class="card my-2">
                  <% if site.photo.attached? %>
                   <%= cl_image_tag site.photo.key %>
                  <% else %>
                   <%= image_tag "https://www.wiego.org/sites/default/files/Hewlett_Bogota_FullRelease_050_1.jpg" %>
