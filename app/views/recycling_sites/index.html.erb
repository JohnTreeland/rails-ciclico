<div class="ciclico-gradient d-flex flex-column justify-content-between">
  <%= render 'shared/navbar' %>
  <div class="container mt-3">
    <h1 class="text-secondary text-center">¿Dónde quieres llevar tu reciclaje?</h1>
    <div class="input-group mb-3">
      <input type="text" class="form-control rounded-pill me-2" placeholder="Ubicación" aria-label="Recipient's username" aria-describedby="button-addon2">
      <input type="text" class="form-control rounded-pill me-2" placeholder="Material" aria-label="Recipient's username" aria-describedby="button-addon2">
      <input type="text" class="form-control rounded-pill me-2" placeholder="Fecha" aria-label="Recipient's username" aria-describedby="button-addon2">
      <button class="btn btn-primary rounded-pill" type="button" id="button-addon2">Filtrar</button>
    </div>
    <div>
      <img src="https://media.wired.com/photos/59269cd37034dc5f91bec0f1/191:100/w_1280,c_limit/GoogleMapTA.jpg" alt="" class="w-100">
    </div>
    <div class="d-flex justify-content-between">
      <h2 class="text-primary text-left mt-3">Sitios de reciclaje destacados</h2>
      <%= link_to "Regresar", "/", class:"btn btn-info-ciclico rounded-pill mt-3" %>
      <%= link_to "Crea tu sitio", " /recycling_sites/new", class:"btn btn-info-ciclico rounded-pill mt-3" %>
    </div>
    <div class="row">
      <% @recycling_sites.each do |site| %>
        <div class="col-4">
          <div class="card my-2">
                <img src="https://www.elmundo.com/assets/uploads/files/Propuetsa%20reciclaje.jpg" class="card-img-top">
                <div class="card-body">
                  <h2><%= site.name %></h2>
                  <p>Contacta a </p>
                  <%= link_to "Ver detalle", recycling_site_path(site) %>
                </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
  <%= render 'shared/footer' %>
</div>
